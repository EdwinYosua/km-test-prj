<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.KmTest" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="TextReguler">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextBold">
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="MediumBoldText" parent="TextBold">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LargeBoldText" parent="TextBold">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ImageBackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/arrow_back_ios_28dp</item>
    </style>


    <style name="Theme.KmTest" parent="Base.Theme.KmTest" />
</resources>